transform {

	param "filename" { select "'addressbook.sda'" }
	variable "addressbook" { select "document($filename)" }

	node "contacts" {
		foreach "$addressbook/contact" {
			node "person" { 
				value "upper-case(firstname)"
				node "phones" {
					value "fn:string-join(phonenumber,',')"
				}
			}
		}
	}
}